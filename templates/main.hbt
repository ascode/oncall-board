<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>{{title}}</title>

    <!-- Bootstrap -->
    <link href="/static/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="/static/css/bootstrap-switch.min.css" rel="stylesheet"/>

    <!-- Custom CSS -->
    <link href="/static/css/style.css" rel="stylesheet"/>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

<input type="checkbox" id="auto-refresh" checked>

<div class="page-header">
    <h1>{{title}}</h1>
</div>

<div class="container container-fluid">

    <div class="row">

    {{#each reports}}
        <div class="col-md-{{../columnWidth}}">


            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2 class="panel-title">{{@key}}</h2>
                </div>
                <div class="panel-body">
                    <table>
                        <tbody>
                        {{#each this}}
                        <tr>
                            <td>{{name}}</td>
                            <td class="bg-{{status}}">
                                {{#if link}}
                                <a target="_blank" href="{{link}}">
                                    {{/if}}

                                    {{{description}}}

                                    {{#if link}}
                                </a>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    {{/each}}

    </div>

    <p>GrokStream Web Charts</p>
    <div class="col-md-12">
        <iframe width="1020" height="480" style="border:0" src="http://numentainc-46.grokstream.com/grok/embed/charts?hash=76c54a288b51ccd361d736a8f9b1befc309864ff&width=1020&height=480"></iframe>
    </div>

</div>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="/static/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/static/js/bootstrap-switch.min.js"></script>

<script>
    $(function() {
        var $switch = $('#auto-refresh');
        var refreshTime = 5 * 1000;
        var refreshHandle = setTimeout(function() {
            window.location.reload(false);
        }, refreshTime);
        $switch.bootstrapSwitch({
            labelText: 'Auto Refresh',
            labelWidth: 100
        });
        $switch.on('switchChange.bootstrapSwitch', function(event, state) {
            if (state) {
                if (! refreshHandle) {
                    refreshHandle = setTimeout(function() {
                        window.location.reload(false);
                    }, refreshTime);
                }
            } else {
                window.clearTimeout(refreshHandle);
                refreshHandle = undefined;
            }
        });
    });
</script>
</body>
</html>
